    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/photoGridcs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:clipToPadding="false"
        android:padding="4dp"
