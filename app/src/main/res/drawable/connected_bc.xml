<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border Stroke -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00FFA6C1" />
            <corners android:radius="70px" /> <!-- 10 percent border radius -->
            <stroke
                android:width="2dp"
                android:color="#FFA6C1" /> <!-- Border Color -->
        </shape>
    </item>
    <!-- Padding -->
    <item android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="50px" /> <!-- 10 percent border radius -->
        </shape>
    </item>

    <item android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#00FFA6C1" />
            <corners android:radius="70px" /> <!-- 10 percent border radius -->
        </shape>
    </item>
</layer-list>
