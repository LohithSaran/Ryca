<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/headerdialogue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Category"
            android:textSize="24dp"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/edit_text_category"
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headerdialogue"
            android:layout_marginTop="23dp"
            android:background="@drawable/textview_background"
            android:hint="Add Shirt or Saree or Shoes etc..."
            android:inputType="text"
            android:maxLength="30"
            android:padding="20dp"
            android:textAlignment="gravity" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_text_category"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/button_cancel"
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/btncancel"
                android:text="Cancel"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/button_save"
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="45dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/button_cancel"
                android:layout_weight="1"
                android:background="@drawable/btnok"
                android:text="Save"
                android:textColor="@android:color/white" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
